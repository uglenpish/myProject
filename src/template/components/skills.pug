script(type="text/x-template" id='skills-list')
  .skills__values
    .skills__values-container
      ul.skills__list
        li.skills__row(v-for="category in skills" :key="category.title")
          skillsRow(
            :category="category"
          )
            

script(type="text/x-template" id='skills-row')
  .skills__row-items
    h3.skills__row-title {{category.title}}
    ul.skills__row-list
      li.skills__row-item(v-for="skill in category.skills" :key="skill.id")
        skill(
          :skill="skill"
        )
          
script(type="text/x-template" id='skill')
  .skill
    svg(viewBox="0 0 100 100").skill__shape
      circle(r="40" cx="50" cy="50").skill__circle.skill__circle--under
      circle(r="40" cx="50" cy="50" ref="circle" stroke = "url(#gradients)" ).skill__circle.skill__circle--above
      linearGradient(id="gradients" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#9300e8")
        stop(offset="100%" stop-color="#4a00ed")
    .skill__title {{skill.title}}