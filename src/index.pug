include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    include template/vigets
    .wrapper
      .welcome
        include template/components/paralax-mount
        include template/components/hero
        include template/components/about
        .triangles.triangles--section
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.arrow
            polygon(points="0,0 0,100 1000,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.arrow
            polygon(points="1000,0 1000,100 0,100")
      section.skills
        .container.skills-container
          .skills__decor
            +image('content/bag.jpg', 'skills__decor-pic')
          .skills__content
            .skills__desc
              h2.skills__desc-title Чем я могу быть полезен вам
              .skills__desc-text
                p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            #skills__component
      include template/components/work
      .main
        .triangles.triangles--rotate
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.arrow
            polygon(points="1000,0 1000,100 0,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.arrow
            polygon(points="0,0 0,100 1000,100")
        include template/components/parallax-budda
        include template/components/reviews
        section.contacts(id="contacts")
          .container
            h2.contacts__title.title Связаться со мной
            form.form
              .form__row
                label.form__block
                  .form__block-label Введите ваше имя
                  .form__block-wrap
                    +icon('user','form__block-icon')
                    .form__block-field
                      input(placeholder="Иванов Иван").form__block-input
                label.form__block
                  .form__block-label Введите ваше email
                  .form__block-wrap
                    +icon('envelope','form__block-icon')
                    .form__block-field
                      input(placeholder="example@mail.com").form__block-input
              .form__row.form__row--more-margin
                label.form__block
                  .form__block-label Сообщение к письму
                  .form__block-wrap.form__block-wrap--align-top
                    +icon('message','form__block-icon')
                    .form__block-field
                      textarea(placeholder="Требуется ваша помощь в создании сайта. \nИнтересуют сроки и цена вопроса" rows="3").form__block-input.form__block-textarea
              .form__row
                .form__buttons
                  button(type="submit").custom-btn Отправить
      include template/components/footer
      

  