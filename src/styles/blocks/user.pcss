.user{
	display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;

  &__avatar{
  	margin-bottom: 70px;
  }

  &__desc{
   @include tablets{
      width: 100%; 
    }
  }

  &__desc-item{
  	display: flex;
    width: 100%; 
  	
    .user__key{
			width: 120px;

  	}

  	.user__value{
			font-weight: 600;
  	}
  }
}